@model AdminWebSite.Models.Product
<div class="content-wrapper">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Delete Product</h4>
                        <h3>Are you sure you want to delete this?</h3>

                        <hr />
                        <h6 style="color:red;">@ViewBag.Error</h6>
                        <p class="card-description">
                            @Html.DisplayNameFor(model => model.ProName) :

                            @Html.DisplayFor(model => model.ProName)
                        </p>
                        <p class="card-description">
                            @Html.DisplayNameFor(model => model.Categories.CateName) :

                            @Html.DisplayFor(model => model.Categories.CateName)
                        </p>
                        <p class="card-description">
                            @Html.DisplayNameFor(model => model.Brand.BrandName) :

                            @Html.DisplayFor(model => model.Brand.BrandName)
                        </p>
                        <p class="card-description">
                            @Html.DisplayNameFor(model => model.Origin) :

                            @Html.DisplayFor(model => model.Origin)
                        </p>
                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()

                            <div class="form-actions no-color">
                                <input type="submit" value="Delete" class="btn btn-danger btn-rounded btn-fw" />
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <a href="/AdminProducts/Index" class="btn btn-inverse-dark btn-fw" style="text-align:left;"><i class="fa fa-backward"></i>Back to list</a>

        </div>
    </div>
</div>
